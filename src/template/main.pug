mixin main({ name, section, title, models, subtitle, path, button, image })
  section(class=`main ${name}`)
    .wrapper
      .path
        a.item(href='/') Главная
        each value, key in path
          .icon.chevron-right-white
          if key
            a.item(href=key) !{value}
          else
            span !{value}
      .info
        if image
          .image
            img(src='/images' + image)
        .titles
          .overtitle !{section}
          h1 !{title}
          if models
            .models-info !{models}
          .subtitle !{subtitle}
          if button && button[0] == 'popup'
            a.button(data-fancybox data-src=button[1] data-touch='false') #{button[2]}
          else if button
            a.button(href=button[0]) #{button[1]}