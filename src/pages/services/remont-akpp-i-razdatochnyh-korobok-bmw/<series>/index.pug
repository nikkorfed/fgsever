extends /layout.pug

block variables
  - var name = 'main_gearbox';
  - var section = 'Направление';
  - var models = series.models.map(model => model.codes).join(', ');
  - var title = `Ремонт АКПП BMW ${series.modelDesc} и раздаточных коробок в Москве`;
  - var seoTitle = `Ремонт АКПП БМВ ${series.model} и раздаток в Москве | Цена в FGSEVER`;
  - var subtitle = `Ремонт раздатки и АКПП БМВ ${series.modelDesc} в Москве (СВАО). FGSEVER профильно занимается диагностикой и ремонтом коробок передач, редукторов и раздаток автомобилей BMW с 2014 года по цене ниже дилерских автосервисов!`;
  - var path = {'/services/': 'Услуги', '/services/remont-akpp-i-razdatochnyh-korobok-bmw/': 'Ремонт АКПП и раздаточных коробок', '' : series.name};
  - var button = ['popup', '#gearbox-appointment', 'Записаться'];
  - var image = `/models/${series.key}/${series.image}-original.png`;

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /contacts
