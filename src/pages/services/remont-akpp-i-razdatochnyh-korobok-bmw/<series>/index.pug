            img(src='/images/services/maintenance/remont-akpp/5-min.jpg' srcset='/images/services/maintenance/remont-akpp/5-min@2x.jpg 1.5x' alt='Фотография с ремонтом АКПП БМВ в автосервисе "FGSEVER" в Москве с ракурса 5')
        .col-4.col-md-3.col-lg-2
          a.photo(data-fancybox='photos' href='/images/services/maintenance/remont-akpp/6.jpg')
            img(src='/images/services/maintenance/remont-akpp/6-min.jpg' srcset='/images/services/maintenance/remont-akpp/6-min@2x.jpg 1.5x' alt='Фотография с ремонтом АКПП БМВ в автосервисе "FGSEVER" в Москве с ракурса 6')
