extends /layout.pug

block variables
  - var name = 'main_russification';
  - var section = 'Услуга';
  - var title = 'Русификация BMW';
  - var seoTitle = title + ' в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по русификации BMW, привезённых из любой точки мира, в Москве — добавление русского языка в меню, установка российских карт в систему навигации, адаптация единиц измерения температуры и давления колес, частоты радиостанций и системы считывания дорожных знаков.';
  - var path = {'/services/': 'Услуги', '': 'Русификация BMW'};
  - var button = ['popup', '#russification-appointment', 'Записаться на русификацию'];

block content
  +main({ name, path, section, title, subtitle, button })
  include /russification/description
  include /appointment
  include /about/advantages
  +about
  include /contacts
