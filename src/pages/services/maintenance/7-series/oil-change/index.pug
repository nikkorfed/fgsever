extends /layout.pug

block variables
  - var name = 'main_high main_7-series';
  - var section = 'Вид работ';
  - var title = 'Замена масел в BMW&nbsp;7&nbsp;серии';
  - var models = 'G11/G12, F01/F02, E65/E66, E38';
  - var seoTitle = 'Замена масел в BMW 7 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по замене масел в автоматической коробке переключения передач (АКПП), редукторах и раздаточной коробке автомобилей BMW 7&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/7-series/': '7&nbsp;серия', '': 'Замена масел'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/oil-change
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr 
                td Замена моторного масла
                td <? echo format_price($workPrices['7-series']['motorOil']) ?>
              tr
                td Замена масла в АКПП
                td <? echo format_price($workPrices['7-series']['gearBoxOil']) ?>
              tr
                td Замена масла в переднем редукторе
                td <? echo format_price($workPrices['7-series']['frontAxleFinalDriveOil']) ?> (+ <? echo format_price($prices['finalDriveOil']['price']) ?> за литр масла)
              tr
                td Замена масла в заднем редукторе
                td <? echo format_price($workPrices['7-series']['rearAxleFinalDriveOil']) ?> (+ <? echo format_price($prices['finalDriveOil']['price']) ?> за литр масла)
              tr
                td Замена масла в раздаточной коробке
                td <? echo format_price($workPrices['7-series']['transferCaseOil']) ?> (+ <? echo format_price($prices['transferBoxOil']['price']) ?> за литр масла)
  include /maintenance/photos/oil-change
  include /about/advantages
  +about
  include /contacts
