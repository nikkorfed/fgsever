extends /layout.pug

block variables
  - var name = 'main_high main_7-series';
  - var section = 'Вид работ';
  - var title = 'Ремонт рулевой рейки BMW&nbsp;7&nbsp;серии';
  - var models = 'G11/G12, F01/F02, E65/E66, E38';
  - var seoTitle = 'Ремонт рулевой рейки BMW 7 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по ремонту и устранению неисправностей рулевой рейки автомобилей BMW 7&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/7-series/': '7&nbsp;серия', '': 'Ремонт рулевой рейки'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/steering-repair
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Ремонт рулевой рейки
                td Рассчитывается индивидуально, в зависимости от сложности ремонта
  include /maintenance/photos/steering-repair
  include /about/advantages
  +about
  include /contacts
