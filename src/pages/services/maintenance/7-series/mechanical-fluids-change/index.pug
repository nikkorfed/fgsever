extends /layout.pug

block variables
  - var name = 'main_high main_7-series';
  - var section = 'Вид работ';
  - var title = 'Замена технических жидкостей в BMW&nbsp;7&nbsp;серии';
  - var models = 'G11/G12, F01/F02, E65/E66, E38';
  - var seoTitle = 'Замена технических жидкостей в BMW 7 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по полной замене тормозной и охлаждающей технических жидкостей автомобилей BMW 7&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/7-series/': '7&nbsp;серия', '': 'Замена технических жидкостей'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/mechanical-fluids-change
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
        .subtitle При оказании услуг используется только оригинальная тормозная и охлаждающая жидкость. Самостоятельно купленная жидкость сторонних производителей в работу #[spam.important не&nbsp;принимается]. 
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr 
                td Замена тормозной жидкости (Включая расходные материалы)
                td <? echo format_price($workPrices['7-series']['brakeFluidWithMaterials']) ?>
              tr 
                td Замена охлаждающей жидкости (Включая расходные материалы)
                td <? echo format_price($workPrices['7-series']['coolant']) ?> (При мойке радиаторов 2 100 ₽)
  include /maintenance/photos/mechanical-fluids-change
  include /about/advantages
  +about
  include /contacts
