extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Услуга';
  - var models = series.models.map(model => model.codes).join(', ');
  - var title = `Замена тормозных колодок и дисков ${series.name} ${models} в Москве`;
  - var seoTitle = `Замена колодок ${series.name} ${models} и тормозных дисков в Москве | Цена на замену задних тормозных колодок, передних и дисков BMW ниже дилеров!`;
  - var subtitle = `Замена задних колодок ${series.name} ${models} передних и тормозных дисков. Профильно занимаемся ТО тормозных систем BMW с 2014 года по цене ниже дилерских автосервисов!`;
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '/services/maintenance/zamena-tormoznyh-diskov-i-kolodok-bmw/': 'Замена тормозных колодок и дисков', '': series.name};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];
  - var image = `/models/${series.key}/${series.image}-original.png`;

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /maintenance/description/brakes-replacement 
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Замена передних тормозных дисков
                td 1 800 ₽
              tr
                td Замена передних тормозных колодок
                td 1 000 ₽
              tr
                td Замена задних тормозных дисков
                td 2 500 ₽
              tr
                td Замена задних тормозных колодок
                td 1 500 ₽
              tr
                td Замена тормозной системы на спортивную M
                td Рассчитывается индивидуально
  include /maintenance/photos/brakes-replacement
  include /about/advantages
  +about
  include /contacts
