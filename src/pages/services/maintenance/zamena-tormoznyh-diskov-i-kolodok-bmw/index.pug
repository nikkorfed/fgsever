                td от <? echo format_price($workPrices['1-series']['frontBrakePads']) ?>
              tr
                td Замена задних тормозных дисков
                td от <? echo format_price($workPrices['1-series']['rearBrakeDisks']) ?>
              tr
                td Замена задних тормозных колодок
                td от <? echo format_price($workPrices['1-series']['rearBrakePads']) ?>
