extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Услуга';
  - var title = 'Замена тормозной жидкости и охлаждающей на BMW';
  - var seoTitle = 'Замена тормозной жидкости БМВ в Москве | Цена замены охлаждающей жидкости BMW ниже дилеров';
  - var subtitle = 'Замена антифриза БМВ и тормозной жидкости. Профильно занимаемся ТО двигателей BMW всех моделей компании, с 2014 года, по цене на смену охлаждающей жидкости ниже дилерских автосервисов!';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '': 'Замена тормозной жидкости и охлаждающей'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button })
  include /maintenance/description/mechanical-fluids-change
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
        .subtitle При оказании услуг используется только оригинальная тормозная и охлаждающая жидкость. Самостоятельно купленная жидкость сторонних производителей в работу #[spam.important не&nbsp;принимается]. 
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr 
                td Замена тормозной жидкости (Включая расходные материалы)
                td 2 500 ₽
              tr 
                td Замена охлаждающей жидкости (Включая расходные материалы)
                td 3 000 ₽ (При мойке радиаторов 2 100 ₽)
  include /models
  include /maintenance/photos/mechanical-fluids-change
  include /about/advantages
  +about
  include /contacts
