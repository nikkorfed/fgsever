extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Услуга';
  - var models = series.models.map(model => model.codes).join(', ');
  - var title = `Замена тормозной жидкости и антифриза ${series.name} ${models} в Москве`;
  - var seoTitle = `Замена тормозной жидкости и антифриза ${series.name} ${models} в Москве | Цена на замену охлаждающей жидкости BMW ниже дилеров!`;
  - var subtitle = `Цена замены тормозной жидкости и антифриза ${series.name} ${models}. Профильно занимаемся ТО двигателей BMW всех моделей компании, с 2014 года, по цене на смену охлаждающей жидкости ниже дилерских автосервисов!`;
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '/services/maintenance/zamena-tormoznoy-zhidkosti-i-ohlazhdayushchey-bmw/': 'Замена тормозной жидкости и охлаждающей', '': series.name};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];
  - var image = `/models/${series.key}/${series.image}-original.png`;

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /maintenance/description/mechanical-fluids-change
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
        .subtitle При оказании услуг используется только оригинальная тормозная и охлаждающая жидкость. Самостоятельно купленная жидкость сторонних производителей в работу #[spam.important не&nbsp;принимается]. 
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr 
                td Замена тормозной жидкости (Включая расходные материалы)
                td 2 500 ₽
              tr 
                td Замена охлаждающей жидкости (Включая расходные материалы)
                td 3 000 ₽ (При мойке радиаторов 2 100 ₽)
  include /maintenance/photos/mechanical-fluids-change
  include /about/advantages
  +about
  include /contacts
