extends /layout.pug

block variables
  - var name = 'main_high main_6-series';
  - var section = 'Вид работ';
  - var title = 'Замена тормозных дисков и колодок в BMW&nbsp;6&nbsp;серии';
  - var models = 'G32, F06/F12/F13, E63/E64';
  - var seoTitle = 'Замена тормозных дисков и колодок в BMW 6 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по плановой замене тормозных дисков и колодок, а также полной замене тормозной системы на спортивную M в автомобилях BMW 6&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/6-series/': '6&nbsp;серия', '': 'Замена тормозных дисков и колодок'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/brakes-replacement
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Замена передних тормозных дисков
                td <? echo format_price($workPrices['6-series']['frontBrakeDisks']) ?>
              tr
                td Замена передних тормозных колодок
                td <? echo format_price($workPrices['6-series']['frontBrakePads']) ?>
              tr
                td Замена задних тормозных дисков
                td <? echo format_price($workPrices['6-series']['rearBrakeDisks']) ?>
              tr
                td Замена задних тормозных колодок
                td <? echo format_price($workPrices['6-series']['rearBrakePads']) ?>
              tr
                td Замена тормозной системы на спортивную M
                td Рассчитывается индивидуально
  include /maintenance/photos/brakes-replacement
  include /about/advantages
  +about
  include /contacts
