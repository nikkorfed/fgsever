extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Услуга';
  - var title = 'Замена масла BMW в Москве «FGSEVER»';
  - var seoTitle = 'Замена масла БМВ в АКПП, редукторе и двигателе в Москве СВАО | Стоимость для дизельных и бензиновых моторов';
  - var subtitle = 'Цена замены масла БМВ в раздаточной коробке, редукторе и АКПП. Профильно занимаемся ТО коробок передач, редукторов и двигателей BMW всех моделей компании с 2014 года по цене ниже дилерских автосервисов! ';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '': 'Замена масла'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button })
  include /maintenance/description/oil-change
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Замена моторного масла
                td от <? echo format_price($workPrices['1-series']['motorOil']) ?>
              tr
                td Замена масла в АКПП
                td от <? echo format_price($workPrices['1-series']['gearBoxOil']) ?>
              tr
                td Замена масла в переднем редукторе
                td от <? echo format_price($workPrices['1-series']['frontAxleFinalDriveOil']) ?> (+ <? echo format_price($prices['finalDriveOil']['price']) ?> за литр масла)
              tr
                td Замена масла в заднем редукторе
                td от <? echo format_price($workPrices['1-series']['rearAxleFinalDriveOil']) ?> (+ <? echo format_price($prices['finalDriveOil']['price']) ?> за литр масла)
              tr
                td Замена масла в раздаточной коробке
                td от <? echo format_price($workPrices['1-series']['transferCaseOil']) ?> (+ <? echo format_price($prices['transferBoxOil']['price']) ?> за литр масла)
  include /models
  include /maintenance/photos/oil-change
  include /about/advantages
  +about
  include /contacts
