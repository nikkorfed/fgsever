extends /layout.pug

block variables
  - var name = 'main_high main_1-series';
  - var section = 'Вид работ';
  - var title = 'Диагностика автомобиля в BMW&nbsp;1&nbsp;серии';
  - var models = 'F20/F21, E81/E82/E87/E88';
  - var seoTitle = 'Диагностика автомобиля в BMW (БМВ) 1 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по общей диагностике и выявлению основных неисправностей автомобилей BMW (БМВ) 1&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/1-series/': '1&nbsp;серия', '': 'Диагностика автомобиля'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/car-diagnostics 
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Общая диагностика автомобиля (включая компьютерную диагностику, диагностику подвески и течи)
                td <? echo format_price($workPrices['1-series']['carDiagnostics']) ?>
  include /maintenance/photos/car-diagnostics
  include /about/advantages
  +about
  include /contacts
