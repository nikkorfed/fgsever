extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Услуга';
  - var title = 'Замена тормозных дисков и колодок BMW';
  - var seoTitle = `${title} в Москве | Автосервис BMW «FGSEVER»`;
  - var subtitle = 'Услуги по плановой замене тормозных дисков и колодок, а также полной замене тормозной системы на спортивную M в автомобилях BMW 5&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '': 'Замена тормозных дисков и колодок'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];
  - var image = '/models/5-series/g30-original.png';

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /maintenance/description/brakes-replacement
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Замена передних тормозных дисков
                td 1 800 ₽
              tr
                td Замена передних тормозных колодок
                td 1 500 ₽
              tr
                td Замена задних тормозных дисков
                td 2 500 ₽
              tr
                td Замена задних тормозных колодок
                td 2 000 ₽
              tr
                td Замена тормозной системы на спортивную M
                td Рассчитывается индивидуально
  include /maintenance/photos/brakes-replacement
  include /about/advantages
  include /about  
  include /contacts
