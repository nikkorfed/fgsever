extends /layout.pug

block variables
  - var name = 'main_high main_3-series';
  - var section = 'Вид работ';
  - var title = 'Ремонт рулевой рейки BMW&nbsp;3&nbsp;серии';
  - var models = 'G20/G21, F30/F31/F34, F80, E90/E91/E92/E93, E46';
  - var seoTitle = 'Ремонт рулевой рейки BMW 3 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по ремонту и устранению неисправностей рулевой рейки автомобилей BMW 3&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/3-series/': '3&nbsp;серия', '': 'Ремонт рулевой рейки'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/steering-repair
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Ремонт рулевой рейки
                td Рассчитывается индивидуально, в зависимости от сложности ремонта
  include /maintenance/photos/steering-repair
  include /about/advantages
  include /about  
  include /contacts
