extends /layout.pug

block variables
  - var name = 'main_high main_3-series';
  - var section = 'Вид работ';
  - var title = 'Замена тормозных дисков и колодок в BMW&nbsp;3&nbsp;серии';
  - var models = 'G20/G21, F30/F31/F34, F80, E90/E91/E92/E93, E46';
  - var seoTitle = 'Замена тормозных дисков и колодок в BMW 3 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по плановой замене тормозных дисков и колодок, а также полной замене тормозной системы на спортивную M в автомобилях BMW 3&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/3-series/': '3&nbsp;серия', '': 'Замена тормозных дисков и колодок'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/brakes-replacement
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Замена передних тормозных дисков
                td 1 800 ₽
              tr
                td Замена передних тормозных колодок
                td 1 000 ₽
              tr
                td Замена задних тормозных дисков
                td 2 500 ₽
              tr
                td Замена задних тормозных колодок
                td 1 500 ₽
              tr
                td Замена тормозной системы на спортивную M
                td Рассчитывается индивидуально
  include /maintenance/photos/brakes-replacement
  include /about/advantages
  +about
  include /contacts
