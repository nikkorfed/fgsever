extends /layout.pug

block variables
  - var name = 'main_wheel-alignment';
  - var section = 'Услуга';
  - var title = 'Сход-развал BMW';
  - var seoTitle = title + ' в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по регулировке развала-схождения BMW в Москве — регулировка основных параметров углов установки колес, таких как развал, схождение и кастер, влияющих на управляемость и стабильность автомобиля на дороге.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '': 'Сход-развал'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться на сход-развал'];

block content
  +main({ name, path, section, title, subtitle, button })
  include /maintenance/description/wheel-alignment
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Проверка углов установки колёс
                td <? echo format_price($workPrices['wheel-alignment']['check']) ?>
              tr
                td Регулировка углов установки колёс (F кузова)
                td <? echo format_price($workPrices['wheel-alignment']['f-series']) ?>
              tr
                td Регулировка углов установки колёс (G кузова, легковые модели)
                td <? echo format_price($workPrices['wheel-alignment']['g-series-sedans']) ?>
              tr
                td Регулировка углов установки колёс (G кузова, кроссоверы)
                td <? echo format_price($workPrices['wheel-alignment']['g-series-x']) ?>
  include /appointment
  include /about/advantages
  +about
  include /contacts
