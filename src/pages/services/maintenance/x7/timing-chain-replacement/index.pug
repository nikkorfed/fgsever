extends /layout.pug

block variables
  - var name = 'main_high main_x7';
  - var section = 'Вид работ';
  - var title = 'Замена цепи ГРМ в BMW&nbsp;X7';
  - var models = 'G07';
  - var seoTitle = 'Замена цепи ГРМ в BMW X7 (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по замене цепи газораспределительного механизма (ГРМ) автомобилей BMW X7 в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/x7/': 'X7', '': 'Замена цепи ГРМ'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/timing-chain-replacement
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr 
                td Замена цепи ГРМ
                td Рассчитывается индивидуально
  include /maintenance/photos/timing-chain-replacement
  include /about/advantages
  +about
  include /contacts
