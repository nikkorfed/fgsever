extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Услуга';
  - var title = 'Замена цепи ГРМ BMW';
  - var seoTitle = `${title} в Москве | Автосервис BMW «FGSEVER»`;
  - var subtitle = 'Услуги по замене цепи газораспределительного механизма (ГРМ) автомобилей BMW 5&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание', '': 'Замена цепи ГРМ'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];
  - var image = '/models/5-series/g30-original.png';

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /maintenance/description/timing-chain-replacement
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr 
                td Замена цепи ГРМ (На двигателях N13 и N20)
                td 25 000 ₽
  include /maintenance/photos/timing-chain-replacement
  include /about/advantages
  include /about  
  include /contacts
