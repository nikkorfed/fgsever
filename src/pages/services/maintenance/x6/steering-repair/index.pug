extends /layout.pug

block variables
  - var name = 'main_high main_x6';
  - var section = 'Вид работ';
  - var title = 'Ремонт рулевой рейки BMW&nbsp;X6';
  - var models = 'G06, F96, F16, F86, E71';
  - var seoTitle = 'Ремонт рулевой рейки BMW X6 (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по ремонту и устранению неисправностей рулевой рейки автомобилей BMW X6 в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/x6/': 'X6', '': 'Ремонт рулевой рейки'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/steering-repair
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Ремонт рулевой рейки
                td Рассчитывается индивидуально, в зависимости от сложности ремонта
  include /maintenance/photos/steering-repair
  include /about/advantages
  +about
  include /contacts
