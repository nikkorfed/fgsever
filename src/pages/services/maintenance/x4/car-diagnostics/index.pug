extends /layout.pug

block variables
  - var name = 'main_high main_x4';
  - var section = 'Вид работ';
  - var title = 'Диагностика автомобиля в BMW&nbsp;X4';
  - var models = 'G02, F98, F26';
  - var seoTitle = 'Диагностика автомобиля в BMW X4 (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по общей диагностике и выявлению основных неисправностей автомобилей BMW X4 в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/x4/': 'X4', '': 'Диагностика автомобиля'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/car-diagnostics
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Общая диагностика автомобиля (включая компьютерную диагностику, диагностику подвески и течи)
                td <? echo format_price($workPrices['1-series']['carDiagnostics']) ?>
  include /maintenance/photos/car-diagnostics
  include /about/advantages
  +about
  include /contacts
