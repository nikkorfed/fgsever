extends /layout.pug

block variables
  - var name = 'main_high main_4-series';
  - var section = 'Вид работ';
  - var title = 'Замена масел в BMW&nbsp;4&nbsp;серии';
  - var models = 'F32/F33/F36, F82/F83';
  - var seoTitle = 'Замена масел в BMW 4 серии (' + models + ') в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Услуги по замене масел в автоматической коробке переключения передач (АКПП), редукторах и раздаточной коробке автомобилей BMW 4&nbsp;серии в Москве. Мы выполним все необходимые работы по обслуживанию вашего автомобиля и ответим на все интересующие вас вопросы.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '/services/maintenance/4-series/': '4&nbsp;серия', '': 'Замена масел'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/oil-change
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Замена масла в АКПП (Включая расходные материалы)
                td <? echo format_price($workPrices['4-series']['gearBoxOilWithMaterials']) ?>
              tr
                td Замена масла в переднем редукторе
                td <? echo format_price($workPrices['4-series']['frontAxleFinalDriveOil']) ?> (+ <? echo format_price($prices['finalDriveOil']['price']) ?> за литр масла)
              tr
                td Замена масла в заднем редукторе
                td <? echo format_price($workPrices['4-series']['rearAxleFinalDriveOil']) ?> (+ <? echo format_price($prices['finalDriveOil']['price']) ?> за литр масла)
              tr
                td Замена масла в раздаточной коробке
                td <? echo format_price($workPrices['4-series']['transferCaseOil']) ?> (+ <? echo format_price($prices['transferBoxOil']['price']) ?> за литр масла)
  include /maintenance/photos/oil-change
  include /about/advantages
  +about
  include /contacts
