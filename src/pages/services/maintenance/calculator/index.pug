extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section  = 'Калькулятор';
  - var title = 'Калькулятор техобслуживания (ТО) BMW';
  - var seoTitle = title + ' в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Калькулятор ТО, с помощью которого можно рассчитать стоимость технического обслуживания (ТО) на конкретный автомобиль BMW по его VIN-номеру.';
  - var path = {'/services/': 'Услуги', '/services/maintenance/': 'Техническое обслуживание BMW', '': 'Калькулятор ТО'};
