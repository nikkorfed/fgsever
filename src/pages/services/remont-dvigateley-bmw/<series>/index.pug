extends /layout.pug

block variables
  - var name = 'main_engine';
  - var section = 'Направление';
  - var models = series.models.map(model => model.codes).join(', ');
  - var title = `Ремонт двигателей ${series.name} ${models} и замена в Москве`;
  - var seoTitle = `Ремонт двигателя ${series.name} ${models} в Москве | Цена ремонта или замены в FGSEVER`;
  - var subtitle = `Замена двигателя БМВ {Model-desc} или ремонт в Москве (СВАО). FGSEVER профильно занимается ремонтом дизельных и бензиновых моторов автомобилей BMW с 2014 года по цене ниже дилерских автосервисов!`;
  - var path = {'/services/': 'Услуги', '/services/remont-dvigateley-bmw/': 'Ремонт двигателей', '' : series.name};
  - var button = ['popup', '#engine-appointment', 'Записаться'];
  - var image = `/models/${series.key}/${series.image}-original.png`;

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /contacts
