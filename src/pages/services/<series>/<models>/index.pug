extends /layout.pug

block variables
  - var name = 'main_maintenance';
  - var section = 'Направление';
  - var title = `Сервис ${series.name.nbsp()}`;
  - var models = model.codes;
  - var seoTitle = `${title} (${models}) в Москве | Автосервис BMW «FGSEVER»`;
  - var subtitle = `${title} (${models}) в Москве — техническое обслуживание, дооснащение, кодирование опций, кузовной ремонт, обновление ПО и карт навигации, диагностика и заправка кондиционеров.`;
  - var path = {'/services/': 'Услуги', [`/services/${series.key}/`]: series.name.nbsp(), '': models};
  - var image = `/models/${series.key}/${model.image || model.key}-original.png`;

block content
  +main({ name, path, section, title, models, subtitle, button, image })
  include /services
  include /contacts
