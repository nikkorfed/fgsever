extends /layout.pug

block variables
  - var name = 'main_remont';
  - var section = 'Услуга';
  - var models = series.models.map(model => model.codes).join(', ');
  - var title = `Ремонт рулевой рейки ${series.name} ${models} в Москве`;
  - var seoTitle = `Ремонт рулевой рейки ${series.name} ${models} в Москве | Цена на ремонт рулевой BMW в FGSEVER`;
  - var subtitle = `Ремонт рейки ${series.name} ${models} в Москве. FGSEVER профильно занимается комплексным ремонтом рулевой BMW всех моделей компании, с 2014 года, по цене ниже дилерских автосервисов!`;
  - var path = {'/services/': 'Услуги', '/services/remont/': 'Ремонт', '/services/remont/remont-rulevyh-reek/': 'Ремонт рулевых реек', '': series.name};
  - var button = ['popup', '#remont-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button, models })
  include /maintenance/description/steering-repair
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Ремонт рулевой рейки
                td Рассчитывается индивидуально, в зависимости от сложности ремонта
  include /maintenance/photos/steering-repair
  include /about/advantages
  +about
  include /contacts
