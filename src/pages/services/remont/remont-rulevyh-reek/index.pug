extends /layout.pug

block variables
  - var name = 'main_remont';
  - var section = 'Услуга';
  - var title = 'Ремонт рулевой рейки BMW в Москве';
  - var seoTitle = 'Ремонт рулевой рейки БМВ в Москве | Ремонт рулевой BMW цена';
  - var subtitle = 'Ремонт рулевых реек БМВ в Москве (СВАО). Авторизованный автосервис FGSEVER осуществляет ремонт рулевой BMW с 2014 года по цене ниже дилерских автосервисов!';
  - var path = {'/services/': 'Услуги', '/services/remont/': 'Ремонт', '': 'Ремонт рулевых реек'};
  - var button = ['popup', '#maintenance-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button })
  include /maintenance/description/steering-repair
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Ремонт рулевой рейки
                td Рассчитывается индивидуально, в зависимости от сложности ремонта
  include /models
  include /maintenance/photos/steering-repair
  include /about/advantages
  +about
  include /contacts
