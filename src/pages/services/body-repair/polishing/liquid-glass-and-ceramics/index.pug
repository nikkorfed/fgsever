extends /layout.pug

block variables
  - var name = 'main_body-repair';
  - var section = 'Вид работ';
  - var title = 'Нанесение жидкого стекла и керамики';
  - var seoTitle = title + ' BMW в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Работы по нанесению на автомобиль различных защитных покрытий.';
  - var path = {'/services/': 'Услуги', '/services/body-repair/': 'Кузовной ремонт', '/services/body-repair/polishing/': 'Полировка', '': title};
  - var button = ['popup', '#body-repair-appointment', 'Записаться'];

block content
  +main(name, path, section, title, subtitle, button) 
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Нанесение жидкого стекла
                td 13 500 ₽
  include /about  
  include /contacts
