extends /layout.pug

block variables
  - var name = 'main_body-repair';
  - var section = 'Вид работ';
  - var title = 'Полировка оптики';
  - var seoTitle = title + ' BMW в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Работы по восстановительной полировке передней или задней оптики автомобиля для устранения помутнений.';
  - var path = {'/services/': 'Услуги', '/services/body-repair/': 'Кузовной ремонт', '/services/body-repair/polishing/': 'Полировка', '': title};
  - var button = ['popup', '#body-repair-appointment', 'Записаться'];

block content
  +main(name, path, section, title, subtitle, button) 
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Полировка оптики
                td 2 000 ₽
  include /about  
  include /contacts
