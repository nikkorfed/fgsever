extends /layout.pug

block variables
  - var name = 'main_body-repair';
  - var section = 'Вид работ';
  - var title = 'Восстановление лакокрасочного покрытия';
  - var seoTitle = title + ' BMW в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Работы по полной полировке всего кузова автомобиля для придания ему первоначального блеска.';
  - var path = {'/services/': 'Услуги', '/services/body-repair/': 'Кузовной ремонт', '/services/body-repair/polishing/': 'Полировка', '': title};
  - var button = ['popup', '#body-repair-appointment', 'Записаться'];

block content
  +main({ name, path, section, title, subtitle, button }) 
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Полировка
                td от 10 000 ₽
  +about
  include /contacts
