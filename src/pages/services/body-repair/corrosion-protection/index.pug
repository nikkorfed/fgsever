extends /layout.pug

block variables
  - var name = 'main_body-repair';
  - var section = 'Услуга';
  - var title = 'Антикоррозийные работы';
  - var seoTitle = title + ' BMW в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Антигравийная обработка порогов и днища автомобиля, обработка скрытых полостей автомобиля, а также устранение коррозии.';
  - var path = {'/services/': 'Услуги', '/services/body-repair/': 'Кузовной ремонт', '': title};

block content
  +main(name, path, section, title, subtitle, button)
  section.services
    .wrapper
      .titles
        .overtitle Наши услуги
        h2 Виды работ
      .columns
        .col-md-6.col-lg-4
          a.services-item(href='anti-gravel-sills-treatment/')
            .services-item__content
              .services-item__text
                .services-item__title
                  h3 Антигравийная обработка порогов
                .subtitle.services-item__subtitle Антигравийная обработка порогов для уменьшения повреждений от попадания камней и гравия
              .button-simple Подробнее
        .col-md-6.col-lg-4
          a.services-item(href='anti-gravel-undercarriage-treatment/')
            .services-item__content
              .services-item__text
                .services-item__title
                  h3 Антигравийная обработка днища автомобиля
                .subtitle.services-item__subtitle Антигравийная обработка днища автомобиля для защиты от попадания камней и гравия
              .button-simple Подробнее
        .col-md-6.col-lg-4
          a.services-item(href='hidden-compartments-treatment/')
            .services-item__content
              .services-item__text
                .services-item__title
                  h3 Обработка скрытых полостей автомобиля
                .subtitle.services-item__subtitle Антикоррозийная обработка любых видимых и скрытых полостей автомобиля
              .button-simple Подробнее
        .col-md-6.col-lg-4
          a.services-item(href='corrosion-removal/')
            .services-item__content
              .services-item__text
                .services-item__title
                  h3 Устранение коррозии
                .subtitle.services-item__subtitle Устранение следов развивающейся коррозии на кузове вашего автомобиля
              .button-simple Подробнее
  include /contacts
