extends /layout.pug

block variables
  - var name = 'main_body-repair';
  - var section = 'Вид работ';
  - var title = 'Антигравийная обработка порогов';
  - var seoTitle = title + ' BMW в Москве | Автосервис BMW «FGSEVER»';
  - var subtitle = 'Работы по антигравийной обработке порогов для уменьшения повреждений от попадания камней и гравия.';
  - var path = {'/services/': 'Услуги', '/services/body-repair/': 'Кузовной ремонт', '/services/body-repair/corrosion-protection/': 'Антикоррозийные работы', '': title};
  - var button = ['popup', '#body-repair-appointment', 'Записаться'];

block content
  +main(name, path, section, title, subtitle, button) 
  section.prices
    .wrapper
      .titles
        .overtitle Об услуге
        h2 Стоимость
      .block
        .table-wrapper
          .table
            table
              tr.table-header
                td Услуга
                td Стоимость
              tr
                td Антикоррозийные работы
                td от 3 000 ₽
  include /about  
  include /contacts
