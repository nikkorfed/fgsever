extends /layout.pug

block variables
  - var name = 'main_diagnostics';
  - var section = 'Направление';
  - var models = series.models.map(model => model.codes).join(', ');
  - var title = `Диагностика BMW ${series.modelDesc} в Москве`;
  - var seoTitle = `Диагностика БМВ ${series.model} в Москве | Цена в FGSEVER`;
  - var subtitle = `Диагностика БМВ ${series.modelDesc} в Москве (СВАО). FGSEVER профильно занимается комплексной компьютерной диагностикой автомобилей BMW дизельных и бензиновых с 2014 года по цене ниже дилерских автосервисов!`;
  - var path = {'/services/': 'Услуги', '/services/diagnostika-bmw/': 'Диагностика', '' : series.name};
  - var button = ['popup', '#diagnostics-appointment', 'Записаться'];
  - var image = `/models/${series.key}/${series.image}-original.png`;

block content
  +main({ name, path, section, title, subtitle, button, image })
  include /contacts
